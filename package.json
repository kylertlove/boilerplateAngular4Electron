{
    "name": "destop-app",
    "version": "0.0.0",
    "license": "MIT",
    "main": "electron.js",
    "scripts": {
        "ng": "ng",
        "linux": "npm run electron-linux",
        "windows": "npm run electron-win",
        "mac": "npm run electron-mac",
        "build-linux": "ng build --base-href . && cp src/electron/* dist",
        "build-win": "ng build --base-href . && copy src\\electron\\* dist",
        "build-mac": "ng build --base-href . && cp src/electron/* dist",
        "electron-win": "npm run build-linux && electron ./dist/electron.js",
        "electron-linux": "npm run build-linux && electron ./dist/electron.js",
        "electron-mac": "npm run build-mac && electron ./dist/electron.js",
        "build:prod-win": "npm run build-win && copy package.json dist && cd dist && electron-packager .",
        "build:prod-linux": "npm run build-linux && cp package.json dist && cd dist && electron-packager .",
        "build:prod-mac": "npm run build-mac && cp package.json dist && cd dist && electron-packager ."
    },
    "private": true,
    "dependencies": {
        "@angular/animations": "^4.0.0",
        "@angular/common": "^4.0.0",
        "@angular/compiler": "^4.0.0",
        "@angular/core": "^4.0.0",
        "@angular/forms": "^4.0.0",
        "@angular/http": "^4.0.0",
        "@angular/platform-browser": "^4.0.0",
        "@angular/platform-browser-dynamic": "^4.0.0",
        "@angular/router": "^4.0.0",
        "core-js": "^2.4.1",
        "font-awesome": "^4.7.0",
        "hammerjs": "^2.0.8",
        "ngx-electron": "^1.0.3",
        "rxjs": "^5.4.1",
        "zone.js": "^0.8.14"
    },
    "devDependencies": {
        "@angular/cli": "1.3.2",
        "@angular/compiler-cli": "^4.0.0",
        "@angular/language-service": "^4.0.0",
        "@types/jasmine": "~2.5.53",
        "@types/jasminewd2": "~2.0.2",
        "@types/node": "~6.0.60",
        "codelyzer": "~3.0.1",
        "electron": "^1.4.3",
        "electron-packager": "^8.1.0",
        "electron-reload": "1.2.1",
        "exports-loader": "0.6.4",
        "file-loader": "0.11.2",
        "html-loader": "0.4.5",
        "istanbul-instrumenter-loader": "2.0.0",
        "jasmine-core": "~2.6.2",
        "jasmine-spec-reporter": "~4.1.0",
        "karma": "~1.7.0",
        "karma-chrome-launcher": "~2.1.1",
        "karma-cli": "~1.0.1",
        "karma-coverage-istanbul-reporter": "^1.2.1",
        "karma-jasmine": "~1.1.0",
        "karma-jasmine-html-reporter": "^0.2.2",
        "protractor": "~5.1.2",
        "ts-node": "~3.0.4",
        "tslint": "~5.3.2",
        "typescript": "~2.3.3"
    }
}
